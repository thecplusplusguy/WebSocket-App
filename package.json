{
  "name": "websocket-app",
  "version": "1.0.0",
  "description": "WebSocket server that returns random sensor/metric data",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:test": "tsc -p tsconfig.test.json",
    "test": "npm run build:test && node --test dist/test/",
    "test:watch": "tsc -p tsconfig.test.json --watch & node --test --watch dist/test/",
    "start": "npm run build && node dist/index.js",
    "dev": "tsc --watch"
  },
  "keywords": ["websocket", "sensor", "metrics"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.3"
  }
}